
@{
    ViewBag.Title = "CamaraType";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Cols = new Zephyr.Models.sys_roleMenuColumnMapService().GetCurrentUserMenuColumns();
}

@section scripts{
    <script src="/Content/js/viewModel/com.viewModel.search.js"></script>
    <script type="text/javascript">
        var data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
        var viewModel = function(){ 
            com.viewModel.search.apply(this,arguments);
        }
        ko.bindingViewModel(new viewModel(data));
    </script>
}

    @Html.RenderToolbar()

    <div class="container_12" style="position:relative;">
        <div class="grid_1 lbl">相机类型编号</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.ID" class="z-txt " /></div>
        <div class="grid_1 lbl">相机系列</div>
        <div class="grid_2 val"><input type="text" data-bind="comboboxValue:form.Serie" class="z-txt easyui-combobox" /></div>
        <div class="grid_1 lbl">相机型号</div>
        <div class="grid_2 val"><input type="text" data-bind="comboboxValue:form.Type" class="z-txt easyui-combobox" /></div>
        
        <div class="clear"></div>
        
        <div class="grid_1 lbl">相机资料描述</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.Description" class="z-txt " /></div>
        <div class="grid_1 lbl">是否可用</div>
        <div class="grid_2 val"><input type="text" data-bind="comboboxValue:form.IsEnable" class="z-txt easyui-combobox" /></div>
        <div class="grid_1 lbl">创建人员</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.CreatePerson" class="z-txt " /></div>
        
        <div class="clear"></div>
        
        <div class="grid_1 lbl">创建日期</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.CreateDate" class="z-txt easyui-daterange" /></div>
        <div class="grid_1 lbl">更新人员</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.UpdatePerson" class="z-txt " /></div>
        <div class="grid_1 lbl">更新日期</div>
        <div class="grid_2 val"><input type="text" data-bind="value:form.UpdateDate" class="z-txt easyui-daterange" /></div>

        <div class="clear"></div>

        <div class="prefix_9" style="position:absolute;top:5px;height:0;">  
            <a id="a_search" href="#" class="buttonHuge button-blue" data-bind="click:searchClick" style="margin:0 15px;">查询</a> 
            <a id="a_reset"  href="#" class="buttonHuge button-blue" data-bind="click:clearClick">清空</a>
        </div>
    </div>
 
    <table data-bind="datagrid:grid">
            <thead>  
            <tr>  
                <th field="ID"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"ID") >相机类型编号</th>
                <th field="Serie"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"Serie") >相机系列</th>
                <th field="Type"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"Type") >相机型号</th>
                <th field="Description"    sortable="true" align="left"    width="600"     @Html.HideColumn(Cols,"Description") >相机资料描述</th>
                <th field="IsEnable"    sortable="true" align="left"    width="80" formatter="com.formatCheckbox"    @Html.HideColumn(Cols,"IsEnable") >是否启用</th>
                <th field="CreatePerson"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"CreatePerson") >创建人员</th>
                <th field="CreateDate"    sortable="true" align="left"    width="200" formatter="com.formatTime"    @Html.HideColumn(Cols,"CreateDate") >创建日期</th>
                <th field="UpdatePerson"    sortable="true" align="left"    width="80"     @Html.HideColumn(Cols,"UpdatePerson") >更新人员</th>
                <th field="UpdateDate"    sortable="true" align="left"    width="200" formatter="com.formatTime"    @Html.HideColumn(Cols,"UpdateDate") >更新日期</th>
            </tr>                            
        </thead>      
    </table>
 
